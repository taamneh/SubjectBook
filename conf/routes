# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET     /                           controllers.Application.Main

GET     /display                    controllers.Application.ReceiveOauthData(state: String, code :String)

GET     /getInfo                    controllers.Application.getInfo(task, subject, studyId: Int, signal_type: Int)

GET     /getPsycho                  controllers.Application.getPsycho(task, subject, studyId: Int, signal_type: Int)

GET     /GetSignal                  controllers.Application.GetSignal(task, subject, studyId: Int, signal_type: Int)

GET     /allStudies                controllers.Application.displayStudies

GET     /showStudy/:studyNo         controllers.Application.showStudy(studyNo: Int)

GET     /displaySubject             controllers.Application.displaySubject(studyNo: Int, SubjectId: String)

GET     /createStudy                controllers.Application.ShowCreateStudyForm()

POST     /createStudy                controllers.Application.InsertNewStudy()

POST    /logout                     controllers.Application.logout

GET     /assets/*file               controllers.Assets.at(path="/public", file)



# Map static resources from the /public folder to the /assets URL path
GET       /videoB                     controllers.Application.getVideo()

GET       /video                     controllers.Application.getVideo2()

# Orphans...
GET     /file                       controllers.Application.file

GET    /login                      controllers.Application.authentication

POST    /login                      controllers.Application.authentication

GET     /ShowDriveDialog            controllers.Application.ShowDriveDialog()

GET     /signup                     controllers.Application.Register

POST    /signup                     controllers.Application.submitRegistration

POST    /InsertStudy                controllers.Application.shareMyStudy

POST    /InsertSubject              controllers.Application.insertSubject

POST    /InsertSession              controllers.Application.InsertSession

GET     /editSubject                controllers.Application.editSubject(studyNo: Int, SubjectId: String)

POST    /upload                     controllers.Application.uploadFile

#to be deleted
GET     /video                      controllers.Application.video

GET     /editStudy/:studyId         controllers.Application.editStudy(studyId: Int)

